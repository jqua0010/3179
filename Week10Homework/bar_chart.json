{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": {"signal": "stateSelector === 'Total for Australia' ? 'Livestock by Industry for All of Australia per Year' : 'Livestock by Industry for ' + stateSelector + ' per Year'"},
      "fontSize": 18,
      "fontWeight": "bold",
      "anchor": "middle",
      "dy": -20
    },
    "width": 300,
    "height": 200,
    "data": {
      "url": "data.csv",
      "format": {
        "type": "csv"
      }
    },
    "params": [
      {
        "name": "yearSelector",
        "value": 2022,
        "bind": {
          "input": "range",
          "min": 1990,
          "max": 2022,
          "step": 1,
          "name": "Select Year: "
        }
      },
      {
        "name": "stateSelector",
        "value": "Total for Australia",
        "bind": {
          "input": "select",
          "options": ["Total for Australia", "New South Wales", "Victoria", "Queensland", "South Australia", "Western Australia", "Tasmania", "Northern Territory"],
          "name": "Select State: "
        }
      }
    ],
    "transform": [
      {
        "filter": "datum.Year == yearSelector"
      },
      {
        "filter": "stateSelector === 'Total for Australia' ? true : datum.State == stateSelector"
      },
      {
        "filter": "datum.Industry != 'All Broadacre'"
      },
      {
        "calculate": "replace(replace(datum.Variable, ' at 30 June', ''), ' June 30', '')", 
        "as": "CleanVariable"
      }
    ],
    "layer": [
      {
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "CleanVariable",
            "type": "nominal",
            "title": "Livestock Type",
            "axis": {
              "labelFontSize": 12,
              "titleFontSize": 14
            }
          },
          "y": {
            "aggregate": "sum",
            "field": "Value",
            "type": "quantitative",
            "title": "Count (no.)",
            "axis": {
              "labelFontSize": 12,
              "titleFontSize": 14
            }
          },
          "color": {
            "field": "Industry",
            "type": "nominal",
            "title": "Industry",
            "legend": {
              "labelFontSize": 12,
              "titleFontSize": 14
            }
          },
          "tooltip": [
            {
              "field": "CleanVariable",
              "type": "nominal",
              "title": "Livestock Type"
            },
            {
              "field": "Value",
              "type": "quantitative",
              "title": "Count"
            },
            {
              "field": "Year",
              "type": "ordinal",
              "title": "Year"
            },
            {
              "field": "Industry",
              "type": "nominal",
              "title": "Industry"
            },
            {
              "field": "State",
              "type": "nominal",
              "title": "State"
            }
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "center",
          "baseline": "middle",
          "fontSize": 15,
          "dx": 0,
          "dy": -200,
          "color": "blue"
        },
        "transform": [
          {
            "calculate": "stateSelector == 'Northern Territory' ? 'NT the only state without sheep!' : ''",
            "as": "NTMessage"
          }
        ],
        "encoding": {
          "text": {
            "field": "NTMessage",
            "type": "nominal"
          }
        }
      }
    ]
  }
  