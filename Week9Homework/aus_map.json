{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Livestock Counts by State",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
    "url": "map_data.topojson",
    "format": {"type": "topojson", "feature": "mapdata"}
    },
    "transform": [
    {
        "lookup": "properties.STE_NAME16",
        "from": {
        "data": {
            "url": "data.csv",
            "format": {"type": "csv"}
        },
        "key": "State",
        "fields": ["Value"]
        },
        "default": 0
    },
    {
        "aggregate": [
        {
            "op": "sum",
            "field": "Value",
            "as": "Total Livestock"
        }
        ],
        "groupby": ["properties.STE_NAME16"]
    }
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
    "color": {
        "field": "Total Livestock",
        "type": "quantitative",
        "scale": {"scheme": "blues"}
    },
    "tooltip": [
        {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
        {"field": "Total Livestock", "type": "quantitative", "title": "Total Livestock"}
    ]
    }
}
