{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Livestock Counts by State",
    "width": 800,
    "height": 400,
    "projection": {
      "type": "mercator",
      "scale": 1000,
      "translate": [400, 300]
    },
    "data": {
      "url": "map_data.topojson",
      "format": {"type": "topojson", "feature": "STE_2016_AUST"}
    },
    "transform": [
      {
        "lookup": "properties.STE_NAME16",
        "from": {
          "data": {
            "url": "aggregated_livestock_2022.csv",  
            "format": {"type": "csv"}
          },
          "key": "State", 
          "fields": ["Value"]
        }
      }
    ],
    "mark": {
      "type": "geoshape",
      "fill": "#e0e0e0",
      "stroke": "#000000",
      "strokeWidth": 0.5
    },
    "encoding": {
      "color": {
        "field": "Value",
        "type": "quantitative",
        "scale": {"scheme": "blues"}
      },
      "tooltip": [
        {"field": "properties.STE_NAME16", "type": "nominal", "title": "State"},
        {"field": "Value", "type": "quantitative", "title": "Total Livestock"}
      ]
    }
  }
  