{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Livestock Counts by State",
    "width": 800,
    "height": 600,
    "projection": {"type": "equalEarth"},
    "layer": [
    {
        "data": {
        "url": "map_data.topojson",
        "format": {"type": "topojson", "feature": "mapdata"
        }
        },
        "transform": [
        {
            "lookup": "State",
            "from": {
            "data": {
                "url": "data.csv",
                "format": {"type": "csv"}
            },
            "key": "State",
            "fields": ["State", "Value"]
            }
        },
        {
            "aggregate": [
            {
                "op": "sum",
                "field": "Value",
                "as": "Total_Livestock"
            }
            ],
            "groupby": ["State"]
        }
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
        "color": {
            "field": "Total_Livestock",
            "type": "quantitative",
            "scale": {"scheme": "blues"},
            "title": "Total Livestock"
        },
        "tooltip": [
            {"field": "State", "type": "nominal", "title": "State"},
            {"field": "Total_Livestock", "type": "quantitative", "title": "Total Livestock"}
        ]
        }
    }
    ]
}